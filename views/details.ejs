<%- include ('partials/header.ejs'); %>
<%- include ('partials/navbar.ejs'); %>

<div class="container">
  <br>
  <h3>Details</h3>
  <hr>
  <% entrys.forEach(entry => { %>
    <% if(entry.state == '1') { %>
      <br>
      <div class="card">
        <div class="card-header">
          <h3><%= entry.plate %></h3>
        </div>
        <div class="card-body">
          <b>Manufacturer:</b>
          <a><%= entry.manufacturer %></a>
          <br>
          <b>Model:</b>
          <a><%= entry.model %></a>
          <br>
          <b>Entry date:</b>
          <a><%= entry.entrydate %></a>
          <br>
          <b>Entry hour:</b>
          <a><%= entry.entryhour %></a>
          <br>
          <b>Total:</b>
          <hr>
          <button class="btn btn-success">Finish</button>
        </div>
      </div>
      <br>
    <% } %>
  <% }) %>
    </div>

<%- include ('partials/footer.ejs'); %>