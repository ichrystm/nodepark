<%- include ('partials/header.ejs'); %>
<%- include ('partials/navbar.ejs'); %>

<div class="container">
  <hr>
  <h2>Active vehicles</h2>
  <hr>
  <% entrys.forEach(entry => { %>
    <% if(entry.state == '1') { %> 
    <br>
    <div class="card">
      <div class="card-header">
        <h3><%= entry.plate %></h3>
      </div>
      <div class="card-body">
        <b>Manufacturer:</b>
        <a><%= entry.manufacturer %></a>
        <br>
        <b>Model:</b>
        <a><%= entry.model %></a>
        <br>
        <b>Entry hour:</b>
        <a><%= entry.entryhour %></a>
        <hr>
        <a href="/details/<%= entry.plate %>"><button class="btn btn-success">View details</button></a>
      </div>
    </div>
    <% } %>
  <% }) %>
</div>

<%- include ('partials/footer.ejs'); %>